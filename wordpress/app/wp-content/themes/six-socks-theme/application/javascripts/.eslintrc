{
  "extends": [
      "airbnb-base"
  ],

  "env": {
      "commonjs": true,
      "es6": true,
      "browser": true
  },

  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "experimentalObjectRestSpread": false,
          "jsx": false
      }
  },

  "rules": {
      "semi": ["error", "never"],
      "indent": ["error", 2],
      "no-multiple-empty-lines": [2, { "max": 3 }],
      "spaced-comment": 0,
      "comma-dangle": [2, "never"],
      "eol-last": [1, "never"],
      "padded-blocks": [1, { "classes": "always" }],
      "max-len": 0,
      "arrow-parens": 0
  }
}